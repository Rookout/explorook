{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "esnext.asynciterable",
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/*"
  ]
}
